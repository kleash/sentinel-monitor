{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "types": ["node", "playwright"],
    "outDir": "dist"
  },
  "include": [
    "playwright.config.ts",
    "global-setup.ts",
    "global-teardown.ts",
    "tests/**/*.ts",
    "utils/**/*.ts"
  ]
}
